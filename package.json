{
  "name": "stremio-ncore-addon",
  "version": "0.9.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && pnpm build:server && pnpm build:client",
    "build:server": "pnpm --filter server build",
    "build:client": "pnpm --filter client build",
    "dev": "pnpm dev:server & pnpm dev:client",
    "dev:server": "pnpm --filter server dev",
    "dev:client": "pnpm --filter client dev",
    "start": "NODE_ENV=production node dist/server/index.js",
    "preview": "NODE_ENV=production node --env-file .env dist/server/index.js",
    "ci": "pnpm check-formatting && pnpm lint && pnpm test",
    "check-formatting": "prettier --check .",
    "format": "prettier --write .",
    "lint": "pnpm lint:server && pnpm lint:client",
    "lint:server": "pnpm --filter server lint",
    "lint:client": "pnpm --filter client lint",
    "test": "vitest run",
    "release": "docker buildx build --platform linux/amd64,linux/arm64 -t detarkende/stremio-ncore-addon:$npm_config_name . --push"
  },
  "dependencies": {
    "hono": "4.7.2",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "pnpm": {
    "allowNonAppliedPatches": true,
    "patchedDependencies": {
      "@types/parse-torrent": "patches/@types__parse-torrent.patch",
      "@types/stremio-addon-sdk": "patches/@types__stremio-addon-sdk.patch",
      "@types/webtorrent": "patches/@types__webtorrent.patch"
    }
  },
  "packageManager": "pnpm@9.12.2"
}
