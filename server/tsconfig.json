{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "dist",
    "lib": ["ES2022"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test", "**/*.test.*"]
}
