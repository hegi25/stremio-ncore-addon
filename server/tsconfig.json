{
  "compilerOptions": {
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "strict": true,

    "customConditions": ["source"],

    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "composite": true,

    "outDir": "../dist/server",
    "lib": ["ES2022"],
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.*"]
}
